# Polymarket Configuration
# Option 1 (recommended): comma-separated wallet addresses to track
POLYMARKET_ACCOUNT_ADDRESSES=0x...,0x...
# Option 2 (backward-compatible): single wallet address
POLYMARKET_ACCOUNT_ADDRESS=0x...

# Twitter API v2 Configuration
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Monitoring Settings
POLL_INTERVAL=5  # Seconds between Data API checks
TWEET_TEMPLATE=default  # Options: default, detailed, minimal
DRY_RUN=false  # When true, do not post tweets
